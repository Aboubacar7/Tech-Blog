<div class="post-content"
    style=" border: solid; border-color:black ; margin-top: 20px; margin-left: 50px;  width: 800px; border-style: ; ">
    <div class="title" style=" display: flex;
        justify-content: space-between; background-color: rgb(112, 66, 66); align-items: center; color: antiquewhite;">
        <input type="hidden" name="post-id" value="{{posts.id}}" />

        <div style="font-size: x-large;"> {{posts.title}} </div>
        <span style="font-size: 15px;">Posted by {{posts.user.username}} on {{format_date posts.createdAt}}</span>
    </div>
    <p style="color:black">{{posts.body}}</p>
</div>

{{#if posts.comments}}
<h3>comment</h3>
{{#each posts.comments}}
<div>
    <p>{{body}}</p>
    <p>{{posts.user.username}}. {{format_date posts.createdAt}}</p>
</div>
{{/each}}
{{/if}}

<div class="content" style=" border: solid;   width: 800px; height: auto; margin-top: 20px; margin-left: 50px">
    <div class="title"
        style=" display: block; justify-content: space-between; align-items: center; color: rgb(13, 13, 12);">
        <div style="font-size: 30px; background-color: rgb(112, 66, 66)"></div>
        <form class="login-form" style="background-color: rgb(165, 190, 190); padding-top: 5px; ">

            <div class="form-group text" style="margin-left: 20px;">
                <label for="content" class="text-light" style="display: block;  ">Comment</label>
                <textarea class="form-input" type="text" style="width: 700px; padding: 30px ; resize: both;"
                    id="new-body">
                </textarea>
            </div>
            <div class="form-group" style="margin-left: 20px; margin-top: 50px;">
                <button class=" btn-primary m-2 create-comment-btn" id="create-btn" style="width: 700px
                ; padding: 8px; margin-top: 7px;">Create</button>
            </div>

        </form>
    </div>
</div>
<script src="/js/comment.js"></script>